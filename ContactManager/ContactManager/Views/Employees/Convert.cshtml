@model ContactManager.Models.Employee
@{
    ViewBag.Title = "Convertir";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rewards = ViewData["rewards"] as List<ContactManager.Models.Reward>;
}

<h2>Convertir</h2>

<h1>@Model.screen_name Score = @Model.fixScore</h1>





@using (Html.BeginForm("ConvertPoints", "Employees", FormMethod.Post))
{
    <fieldset>
        <div>
            <label for="Rewards">Rewards:</label>
            <select name="Rewards">
                @{
                    foreach (var reward in rewards)
                    {
                        <option value="@reward.name">@reward.name (@reward.points)</option>
                    }
                }
            </select>
        </div>

        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Convert" class="submit" />
        </div>
    </fieldset>
}




